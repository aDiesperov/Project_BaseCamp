@page
@model MyApplicationForRealEstateModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications.First().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications.First().FromPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications.First().ToPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications.First().FromTotalArea)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications.First().ToTotalArea)
                    </th>
                    <th width="175px">Configuration</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Applications == null || Model.Applications.Count() == 0)
                {
                    <tr>
                        <td align="center" colspan="7">Empty!</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Applications)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FromPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ToPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FromTotalArea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ToTotalArea)
                        </td>
                        <td>
                            <form method="post">
                                <input name="id" value="@item.ApplicationForRealEstateId" type="hidden" />
                                <button class="btn @(item.Active ? "btn-warning" : "btn-success")" asp-page-handler="OnOff">@(item.Active ? "OFF" : "ON")</button> |
                                <button class="btn btn-danger" asp-page-handler="Delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
