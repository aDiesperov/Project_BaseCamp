@page
@model OfferRealEstateModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">

        <div class="form-group">
            <label asp-for="Application.Name"></label>
            <input readonly asp-for="Application.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Application.Description"></label>
            <textarea readonly asp-for="Application.Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Application.FromPrice"></label>
            <input readonly asp-for="Application.FromPrice" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Application.ToPrice"></label>
            <input readonly asp-for="Application.ToPrice" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Application.Author.UserName"></label>
            <input readonly asp-for="Application.Author.UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Application.DatePublication"></label>
            <input readonly asp-for="Application.DatePublication" class="form-control" />
        </div>
        <form id="profile-form" method="post">
            <input asp-for="Application.ApplicationForRealEstateId" name="ApplicationForRealEstateId" type="hidden"/>
            <div class="form-group">
                <label asp-for="Adverts"></label>
                <select class="form-control" name="AdvertId" asp-items="@(new SelectList(Model.Adverts, "AdvertId", "Name"))"></select>
            </div>
            <button type="submit" class="btn btn-default">Send</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
