@page
@model ApplicationsForAgentModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications.First().Description)
                    </th>
                    <th>
                        Login
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications.First().Date)
                    </th>
                    <th width="175px">Configuration</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Applications == null || Model.Applications.Count() == 0)
                {
                    <tr>
                        <td align="center" colspan="5">Empty!</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Applications)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                <form method="post">
                                    <input name="id" value="@item.ApplicationForAgentId" type="hidden" />
                                    <button class="btn btn-success" asp-page-handler="Confirm">Confirm</button> |
                                    <button class="btn btn-danger" asp-page-handler="Delete">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
